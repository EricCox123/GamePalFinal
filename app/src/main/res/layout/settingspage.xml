<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/settings_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
<FrameLayout android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#A1CCBC">

        <android.support.v7.widget.Toolbar
            android:id="@+id/settingsToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme" />


        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="122dp"
            android:layout_marginLeft="122dp"
            android:layout_gravity="center"
            android:layout_marginStart="124dp"
            android:layout_marginTop="0dp"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:textSize="18dp"
            android:text="Search Genre:"
            android:textColor="#000"/>
        <Spinner
            android:id="@+id/gameGenre"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginTop="70dp"
            android:paddingRight="22dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp"
            android:textSize="18dp"
            android:text="Search Region:"
            android:textColor="#000"/>

        <Spinner
            android:id="@+id/spinnerRegion"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginTop="115dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="160dp"
            />
        <EditText
        android:id="@+id/nameChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginscrn"
        android:hint="Name"
            android:layout_marginTop="30dp"
        android:layout_marginLeft="185dp"
            android:layout_marginRight="15dp"
        android:gravity="left"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="160dp"
            />

        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="15dp"
            android:textAlignment="textStart"
            android:hint="Bio" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select 4 games you play!"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="180dp"/>

        <ImageView
            android:id="@+id/game1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:src="@mipmap/blank"/>

        <ImageView
            android:id="@+id/game2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="195dp"
            android:src="@mipmap/blank"
            />

        <ImageView
            android:id="@+id/game3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/blank" />

        <ImageView
            android:id="@+id/game4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="195dp"
            android:src="@mipmap/cod" />

        <Button
            android:id="@+id/appChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="apply changes" />

        <Button
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appChanges"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-43dp"
            android:text="Back" />


    </RelativeLayout>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>